	<div class="requestForm">
		<h1><b>Showing Details for {{roomNo.Room_Name}}</b></h1>
		<br>
		<form id="ReqBook" name="form" id="book_form"> 
			<input type="hidden" name="roomName" value="{{roomNo.Room_Name}}" id="roomName"/>
			<label>Name</label>
			<il1><input type="text" id="getName" name="Name" value="{{rooms.Name}}"></il1>
			<br><br>
			<label1 for="branch">Select Branch</label1>
			<il2><input type="text" id="branch" name="branch" value="{{rooms.branch}}"></il2>
			<label2 for="year">Select Year</label2>
			<il3><input type="text" id="year" name="year" value="{{rooms.year}}"></il3>
			<br><br>
			<label>Mobile Number</label>
			<il4><input type="number" id="getMobile" name="mobile" value="{{rooms.MobileNumber}}"></il4>
			<br><br>
			<label for="society">Society</label>
			<il5><input type="text" id="society" name="society" value="{{rooms.society}}"></il5>
			<br><br>
			<label>Event Name</label>
			<il6><input type="text" id="getEvent" name="event" value="{{rooms.eventNames}}"</il6>
			<br><br>
			<label>Purpose</label>
			<il7><input type="text" id="getPurpose" name="purpose" value="{{rooms.purpose}}"></il7>
			<br><br>
			<label for id="eventDate">Date Of Event</label>
			<il8><input type="date" id="eventDate" name="eventDate" value="{{rooms.eventDate}}"></il8>
			<br><br>
			<label5 for id="eventTime">Event Time</label5>
			<il9><input type="time" id="eventTime" name="eventTime" value="{{rooms.eventTime}}"></il9>
			<label3> to </label3>
			<il10><input type="time" id="eventTime1" name="eventTime1" value="{{rooms.eventTime1}}"></il10>
			<br><br>
			<label4 for="people">Total Strength<br>(Approx.)</label4>
			<il11><input type="number" id="people" name="people" value="{{rooms.people}}"></il11>
			<br><br><br>
			<label6><strong>Additional Facilities:</strong></label6>
			<br><br>
			<il12><input type="radio" id="yesAC" name="AC" value="{{rooms.AC}}"></il12>
			<label7 for="yesAC">Yes</label7>
			<br><br>
			<il12><input type="radio" id="yesSS" name="SS" value="{{rooms.SS}}"></il12>
			<label7 for="yesSS">Yes</label7>
			<br><br><br>
		</form>
		
	</div>
	<script src="/js/requestForm.js"></script>
</body>
</html>